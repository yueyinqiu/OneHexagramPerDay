<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="jing.json" />
    <None Remove="tuan.json" />
    <None Remove="xiang.json" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="jing.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="tuan.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
    <Content Include="xiang.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="lunar-csharp" Version="1.2.19" />
    <PackageReference Include="YiJingFramework.Painting.Presenting" Version="3.0.1" />
    <PackageReference Include="YiJingFramework.References.Zhouyi" Version="5.0.1" />
    <PackageReference Include="YiJingFramework.References.Zhouyi.Zhuan" Version="3.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HexagramProvider\HexagramProvider.csproj" />
  </ItemGroup>

</Project>
